@model IEnumerable<Guia10.Models.Doctor>

@{
    ViewBag.Title = "Index";
}

<h2>Listado de Doctores</h2>

<p>
    @Html.ActionLink("Agregar Nuevo", "Create")
</p>
<table class="table">
    <tr>
        <!--
    <th>
        @Html.DisplayNameFor(model => model.DUI)
    </th>-->
        <th>
            @Html.ActionLink("DUI", "Index", new { sortOrder = ViewBag.DUISortParam })
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombres)
        </th>
        <!--
    <th>
        @Html.DisplayNameFor(model => model.Apellidos)
    </th>-->
        <th>
            @Html.ActionLink("Apellidos", "Index", new { sortOrder = ViewBag.ApellidoSortParam })
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Especialidad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cargo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DUI)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nombres)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Apellidos)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Especialidad)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cargo)
        </td>
        <td>
            @Html.ActionLink("Modificar", "Edit", new { id=item.CodigoDoctor }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.CodigoDoctor }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.CodigoDoctor })
        </td>
    </tr>
}

</table>
